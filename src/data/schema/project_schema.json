{
    "allProjects" : {
        "type" : "array",
        "uniqueItems": true,
        "maxItems" : 50,
        "project" :{
            "type" : "object",
            "properties" : {
                "projId" : {
                    "type" : "integer",
                    "minimum" : 0
                },
                "projName" : {
                    "type" : "string",
                    "minLength" : 1
                },
                "projPath" : {
                    "type" : "string",
                    "minLength" : 1
                },
                "projDesc" : {
                    "type" : "string",
                    "minLength" : 1,
                    "default" : ""
                },
                "imageFormat" : {
                    "type" : "string",
                    "minLength" : 1,
                    "pattern" : "^[a-z]+$",
                    "default" : "png"
                },
                "chrctrFile" : {
                    "type" : "string",
                    "minLength" : 1,
                    "default" : "characters"
                },
                "chrctrAppearances" : {
                    "type" : "array",
                    "maxItems" : 50,
                    "uniqueItems" : true,
                    "chrctr" : {
                        "type" : "object",
                        "properties" : {
                            "chrctrName" : {
                                "type" : "string",
                                "minLength" : 1
                            },
                            "firstAppearance" : {
                                "type" : "string",
                                "minLength" : 1
                            }
                        }
                    }
                }
            },
            "required": [ 
                "projId", 
                "projName", 
                "projPath"
            ]
        }
    }
}